{
    "compilerOptions": {
        "baseUrl": ".",
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "lib": [ "es6", "dom" ],
        "target": "es5",
        "jsx": "react",
        "paths": {
            "*": [
              "src/main/resources/static/js/*",
              "node_modules/*"
            ]
          }
    },
  
  "include": ["src/main/resources/static/js/*"],
  "exclude": [
    "node_modules"
  ]
}
